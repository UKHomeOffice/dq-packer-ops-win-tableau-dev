{
  "variables": {
    "access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "drone_build_number": "{{env `DRONE_BUILD_NUMBER`}}"
  },
  "sensitive-variables": ["access_key", "secret_key"],
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "region": "eu-west-2",
      "iam_instance_profile": "packer_builder",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "cloudimg-windows-server2019*"
        },
        "owners": [
          "679593333241"
        ],
        "most_recent": true
      },
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 500,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ],
      "communicator": "winrm",
      "winrm_username": "Administrator",
      "winrm_use_ssl": true,
      "winrm_insecure": true,
      "winrm_port": 5986,
      "user_data_file": "./scripts/setupwrm.ps1",
      "instance_type": "t3.xlarge",
      "ami_name": "dq-ops-win-tab-dev-{{user `drone_build_number`}}",
      "ami_users": [
        "483846886818",
        "337779336338"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml",
      "ansible_env_vars": [
        "ANSIBLE_HOST_KEY_CHECKING=False",
        "ANSIBLE_SSH_ARGS='-o ControlMaster=auto -o ControlPersist=60s -o ControlPath=/dev/shm/cp%%h-%%p-%%r'",
        "ANSIBLE_NOCOLOR=True",
        "ANSIBLE_TIMEOUT=30"
      ],
      "user": "Administrator",
      "use_proxy": false,
      "extra_arguments": [
        "-e",
        "ansible_winrm_server_cert_validation=ignore",
        "--extra-vars", "ansible_shell_type=powershell ansible_shell_executable=None",
        "--ssh-extra-args", "-o IdentitiesOnly=yes -o 'HostKeyAlgorithms=+ssh-rsa' -o 'PubkeyAcceptedAlgorithms=+ssh-rsa'"
      ]
    },
    {
      "type": "powershell",
      "scripts": [
          "./scripts/disable-esc-and-uac.ps1"
      ]
    },
    {
      "type": "powershell",
      "inline": [
      "Set-Location $env:programfiles/amazon/ec2launch",
      "./ec2launch.exe reset --block",
      "./ec2launch.exe sysprep --shutdown --block"
      ]
    }
  ]
}
